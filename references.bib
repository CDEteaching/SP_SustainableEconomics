@article{morganEconomicManModel2006a,
  title = {Economic {{Man}} as {{Model Man}}: {{Ideal Types}}, {{Idealization}} and {{Caricatures}}},
  shorttitle = {Economic {{Man}} as {{Model Man}}},
  author = {Morgan, Mary S.},
  date = {2006-03},
  journaltitle = {Journal of the History of Economic Thought},
